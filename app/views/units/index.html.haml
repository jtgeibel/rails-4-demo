%h1 Listing units

%table.table
  %tr
    %th Part
    %th Serial
    %th Contract
    %th

  - @units.each do |unit|
    %tr
      %td= unit.part
      %td= unit.serial
      %td= unit.contract
      %td
        =link_to 'Show', unit
        |
        = link_to 'Edit', edit_unit_path(unit)
        |
        = link_to 'Destroy', unit, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Unit', new_unit_path
