%p.pull-right
  = bootstrap_button 'Export', '', :icon => "icon-download-alt", disabled: true
  = bootstrap_button 'New Failure report', new_failure_report_path, :type => "btn-primary", :icon => "icon-plus", :icon_white => true

%h1 Listing failure reports

%table.table
  %tr
    %th Author
    %th Unit
    %th Subject
    %th RMA
    %th Failcode
    %th

  - @failure_reports.each do |failure_report|
    %tr
      %td= failure_report.author.email
      %td= link_to failure_report.unit.serial, failure_report.unit
      %td= failure_report.subject
      %td= failure_report.rma
      %td= failure_report.failcode
      %td
        .pull-right
          = bootstrap_button 'Edit', edit_failure_report_path(failure_report), :icon => 'icon-edit'
          = bootstrap_button 'Show', failure_report_path(failure_report)
